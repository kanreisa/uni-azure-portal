{
    "manifest_version": 2,
    "name"            : "Uni Azure Portal",
    "version"         : "8",
    "description"     : "Universalize the Azure Portal (Preview).",
    "icons": {
        "16" : "icon16.png",
        "48" : "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_icon": {
            "19" : "icon19.png",
            "38" : "icon38.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://portal.azure.com/",
                "https://portal.azure.com/?*",
                "https://ms.portal.azure.com/",
                "https://ms.portal.azure.com/?*"
            ],
            "js": ["uni.js"],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "uni.css"
    ],
    "permissions": [
        "tabs",
        "https://portal.azure.com/*",
        "https://ms.portal.azure.com/*"
    ]
}
